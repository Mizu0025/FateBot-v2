{
  "name": "fatebot-ts",
  "version": "1.0.0",
  "engines":{
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/bot.js",
    "dev": "tsc && node dist/bot.js",
    "watch": "tsc --watch",
    "start:dev": "dotenv -e .env -e .env.dev -- ts-node src/bot.ts",
    "start:test": "dotenv -e .env -e .env.test -- ts-node src/bot.ts",
    "start:prod": "dotenv -e .env -e .env.prod -- node dist/bot.js",
    "test": "jest"
  },
  "dependencies": {
    "@types/node": "^24.0.12",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.5.13",
    "irc-framework": "^4.14.0",
    "sharp": "^0.34.2",
    "ts-node": "^10.9.2",
    "uuid": "^11.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "dotenv-cli": "^7.0.0",
    "jest": "^30.0.5",
    "ts-jest": "^29.4.1",
    "typescript": "^5.8.3"
  }
}
